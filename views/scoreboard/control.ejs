<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Championship Scoreboard</title>
    <link rel="stylesheet" href="../../css/scoreboard/control.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
    <div class="scoreboard">
        <div class="header">
            Championship Match
        </div>
        <div class="timer-container">
            <div class="row">
                <div class="col">
                    <div style="display: flex; justify-content: left; font-size: 30px;">24</div>
                </div>
                <div class="col">
                    <button style="display: flex; justify-content: left;" class="start" id="start24">Start</button>
                </div>
            </div>
            <div style="display: flex; justify-content: center;" class="timer" id="timer">12:00</div>
            <div class="timer-controls">
                <button class="start" id="start-pause" ><i class="fa-solid fa-play"></i></button>
                <button class="reset" >Reset</button>
            </div>
        </div>
        <div class="match-container">
            <div class="team team1">
                <div class="team-logo">
                    <div style="font-size: 2rem;">üèÜ</div>
                </div>
                <div class="team-name">Team 1</div>
                <div class="score" id="score1">0</div>
                <div class="controls">
                    <div style="display: flex; justify-content: center;" class="row">
                        <div class="col">
                            <button class="btn" id="point-more-1">+1</button>
                        </div>
                        <div class="col">
                            <button class="btn" id= "point-more-1-2">+2</button>
                        </div>
                        <div class="col">
                            <button class="btn" id= "point-more-1-3">+3</button>
                        </div>
                    </div>
                    <div style="display: flex; justify-content: center;" class="row">
                        <div  class="col">
                            <button class="btn" id="point-less-1">-1</button>
                        </div>
                        <div  class="col">
                            <button class="btn" id="point-less-1-2">-2</button>
                        </div>
                        <div  class="col">
                            <button class="btn" id="point-less-1-3">-3</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="vs">VS</div>
            <div class="team team2">
                <div class="team-logo">
                    <div style="font-size: 2rem;">üèÜ</div>
                </div>
                <div class="team-name">Team 2</div>
                <div class="score" id="score2">0</div>
                <div class="controls">
                    <div style="display: flex; justify-content: center;" class="row">
                        <div class="col">
                            <button class="btn" id="point-more-2">+1</button>
                        </div>
                        <div class="col">
                            <button class="btn" id= "point-more-2-2">+2</button>
                        </div>
                        <div class="col">
                            <button class="btn" id= "point-more-2-3">+3</button>
                        </div>
                    </div>
                    <div style="display: flex; justify-content: center;" class="row">
                        <div  class="col">
                            <button class="btn" id="point-less-2">-1</button>
                        </div>
                        <div  class="col">
                            <button class="btn" id="point-less-2-2">-2</button>
                        </div>
                        <div  class="col">
                            <button class="btn" id="point-less-2-3">-3</button>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../../js/scoreboard/control.js"></script>

</body>
</html>
